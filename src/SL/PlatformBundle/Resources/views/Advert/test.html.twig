{% extends "SLPlatformBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}
{% block body %}
    <h1>Ajouter une annonce</h1>
    {# src/SL/PlatformBundle/Resources/views/Advert/form.html.twig #}
    <h3>Formulaire d'annonce</h3>

    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.advert.date, "Date", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.advert.date) }}
            <div class="col-sm-10">
                {# Génération de l'input. #}
                {{ form_widget(form.advert.date) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.advert.title, "Titre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.advert.title) }}
            <div class="col-sm-10">
                {# Génération de l'input. #}
                {{ form_widget(form.advert.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.advert.content, "Contenu", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.advert.content) }}
            <div class="col-sm-10">
                {{ form_widget(form.advert.content, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.advert.author, "Auteur", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.advert.author) }}
            <div class="col-sm-10">
                {{ form_widget(form.advert.author, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.language, "Langues parlées", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            {{ form_errors(form.language) }}
            <div class="col-sm-10">
                {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group">
            {{ form_label(form.acquired, "Acquis", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.acquired) }}
            <div class="col-sm-2">
                {{ form_widget(form.acquired, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        {{ form_widget(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </div>

{% endblock %}

